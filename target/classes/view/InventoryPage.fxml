<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #d2dae2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.applimax.project.controller.InventoryPageController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="671.0" prefWidth="974.0" spacing="20.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #00003E; -fx-background-radius: 5;">
                <Label style="-fx-text-fill: white; -fx-padding: 15;" text="Inventory Management">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Form Section -->
            <GridPane hgap="15" style="-fx-padding: 20; -fx-background-color: rgba(216,216,255,0.88); -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" vgap="15">
                <columnConstraints>
                    <ColumnConstraints hgrow="NEVER" minWidth="150.0" />
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints hgrow="NEVER" maxWidth="229.0" minWidth="150.0" prefWidth="185.0" />
                    <ColumnConstraints hgrow="ALWAYS" maxWidth="361.0" minWidth="289.0" prefWidth="215.0" />
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints minHeight="35.0" />
                    <RowConstraints minHeight="35.0" />
                    <RowConstraints minHeight="35.0" />
                </rowConstraints>

                <!-- Customer Selection -->
                <Label text="Supplier ID:" GridPane.rowIndex="1">
                    <font>
                        <Font name="Segoe UI Semibold" size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cmbSupplierId" onAction="#cmbSupplierIdOnAction" prefHeight="26.0" prefWidth="209.0" style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88); -fx-border-width: 0 0 2 0; -fx-border-color: black;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Supplier Name:" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <font>
                        <Font name="Segoe UI Semibold" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="lblSupplierName" prefHeight="32.0" prefWidth="356.0" style="-fx-border-color: black; -fx-border-radius: 3; -fx-padding: 5; -fx-background-color: rgba(216,216,255,0.88); -fx-border-width: 0 0 2 0;" GridPane.columnIndex="3" GridPane.rowIndex="1">
                    <font>
                        <Font name="Segoe UI" size="14.0" />
                    </font>
                </Label>

                <!-- Item Selection -->
                <Label text="Item ID:" GridPane.rowIndex="2">
                    <font>
                        <Font name="Segoe UI Semibold" size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="cmbItemId" onAction="#cmbItemIdOnAction" prefHeight="26.0" prefWidth="207.0" style="-fx-background-radius: 3; -fx-background-color: rgba(216,216,255,0.88); -fx-border-width: 0 0 2 0; -fx-border-color: black;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Item Name:" GridPane.columnIndex="2" GridPane.rowIndex="2">
                    <font>
                        <Font name="Segoe UI Semibold" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="lblItemName" prefHeight="32.0" prefWidth="356.0" style="-fx-border-color: black; -fx-border-radius: 3; -fx-padding: 5; -fx-background-color: rgba(216,216,255,0.88); -fx-border-width: 0 0 2 0;" GridPane.columnIndex="3" GridPane.rowIndex="2">
                    <font>
                        <Font name="Segoe UI" size="14.0" />
                    </font>
                </Label>

                <!-- Order Details -->
                <Label text="Inventory ID:">
                    <font>
                        <Font name="Segoe UI Semibold" size="14.0" />
                    </font>
                </Label>
                <Label fx:id="lblId" style="-fx-border-color: #dcdde1; -fx-border-radius: 3; -fx-padding: 5;" text="I001" GridPane.columnIndex="1">
                    <font>
                        <Font name="Segoe UI" size="14.0" />
                    </font>
                </Label>
            </GridPane>
         <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 0 0 10 0;">
            <children>
               <Button fx:id="btnSave" mnemonicParsing="false" onAction="#btnInventorySaveOnAction" prefHeight="26.0" prefWidth="130.0" style="-fx-background-color: #4cd137; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;" text="Save">
                  <font>
                     <Font size="13.0" />
                  </font>
               </Button>
               <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#btnInventoryUpdateOnAction" prefWidth="130.0" style="-fx-background-color: #0097e6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;" text="Update">
                  <font>
                     <Font size="13.0" />
                  </font>
               </Button>
               <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnInventoryDeleteOnAction" prefWidth="130.0" style="-fx-background-color: #e55039; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;" text="Delete">
                  <font>
                     <Font size="13.0" />
                  </font>
               </Button>
               <Button fx:id="btnReset" mnemonicParsing="false" onAction="#btnInventoryResetOnAction" prefWidth="130.0" style="-fx-background-color: #f6b93b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;" text="Reset">
                  <font>
                     <Font size="13.0" />
                  </font>
               </Button>
               <Button fx:id="btnReport" mnemonicParsing="false" onAction="#btnInventoryReportOnAction" prefWidth="130.0" style="-fx-background-color: #D980FA; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 3;" text="Generate Report">
                  <font>
                     <Font size="13.0" />
                  </font>
               </Button>
            </children>
         </HBox>

            <!-- Table Section -->
            <VBox spacing="5" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                <TableView fx:id="tblInventory" onMouseClicked="#onClickTable" prefWidth="960.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" style="-fx-alignment: CENTER;" text="Inventory ID" />
                        <TableColumn fx:id="colName" style="-fx-alignment: CENTER;" text="Supplier Name" />
                  <TableColumn fx:id="colItemName" style="-fx-alignment: CENTER;" text="Item Name" />
                  <TableColumn fx:id="colUnitPrice" style="-fx-alignment: CENTER;" text="Unit Price" />
                        <TableColumn fx:id="colQty" style="-fx-alignment: CENTER;" text="Quantity On Stock" />
                        <TableColumn fx:id="colDate" style="-fx-alignment: CENTER;" text="Received Date" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>

                </TableView>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
